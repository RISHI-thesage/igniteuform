<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IgniteU - Student Registration</title>
    <meta name="description" content="Register your query with IgniteU. Empowering Students to Ask, Learn, and Grow!">
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" type="image/png" href="logo3.png">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <img src="logo3.png" alt="Brand Logo" class="brand-logo" />
            </div>
            <div class="nav-links bottom-nav">
                Empowering Students to Ask, Learn, and Grow!
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="form-header">
                <h1>Student Registration</h1>
                <p>Fill out the form below to register for IgniteU.</p>
            </div>

            <div class="form-container">
                <form id="studentQueryForm" class="query-form">
                    <div class="form-card">
                        <div class="form-group">
                            <label for="fullName">
                                <i class="fas fa-user"></i>
                                Full Name *
                            </label>
                            <input type="text" id="fullName" name="fullName" required>
                        </div>
                        <div class="form-group">
                            <label for="className">
                                <i class="fas fa-school"></i>
                                Class *
                            </label>
                            <select id="className" name="className" required>
                                <option value="">Select your class</option>
                                <option value="6th">6th</option>
                                <option value="7th">7th</option>
                                <option value="8th">8th</option>
                                <option value="9th">9th</option>
                                <option value="10th">10th</option>
                            </select>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="city">
                                    <i class="fas fa-city"></i>
                                    City *
                                </label>
                                <input type="text" id="city" name="city" required>
                            </div>
                            <div class="form-group">
                                <label for="state">
                                    <i class="fas fa-map-marker-alt"></i>
                                    State *
                                </label>
                                <input type="text" id="state" name="state" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="phoneNumber">
                                <i class="fas fa-phone"></i>
                                Phone Number *
                            </label>
                            <input type="tel" id="phoneNumber" name="phoneNumber" required>
                        </div>
                        <div class="form-group">
                            <label for="question">
                                <i class="fas fa-question-circle"></i>
                                Ask Us a Question (Optional)
                            </label>
                            <textarea id="question" name="question" rows="4" placeholder="Type your question here..." style="resize: none;"></textarea>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="submit-btn">
                                <i class="fas fa-paper-plane"></i>
                                Submit Registration
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <!-- Success Modal -->
    <div id="successModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <i class="fas fa-check-circle success-icon"></i>
                <h2>Success!</h2>
            </div>
            <div class="modal-body">
                <p id="successMessage">Your registration has been submitted successfully!</p>
            </div>
            <div class="modal-footer">
                <button id="closeModal" class="close-btn">Close</button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-brand">
                <img src="logo3.png" alt="Brand Logo" class="brand-logo" />
            </div>
            <div class="footer-links">
                <a href="mailto:igniteu.future@gmail.com"><i class="fas fa-envelope"></i></a>
                <a href="https://www.linkedin.com/company/igniteuu/"><i class="fab fa-linkedin"></i></a>
                <a href="https://www.instagram.com/ignitee_u?igsh=MW11dnB5ZzZ6a2hrbA=="><i class="fab fa-instagram"></i></a>
            </div>
            <div class="footer-copyright">
                <p>&copy; 2025 IgniteU. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="script.js"></script>
    <script>
    // Hamburger menu toggle
    const hamburger = document.getElementById('hamburger');
    const navLinks = document.getElementById('navLinks');
    hamburger.addEventListener('click', () => {
        navLinks.classList.toggle('open');
    });
    // Close menu on link click (mobile)
    document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('click', () => {
            navLinks.classList.remove('open');
        });
    });
    </script>
</body>
</html> 